@model IEnumerable<GCSERP.MVC.Models.ProdutoViewModel>;

<section class="vh-100">
    <div class="container py-5 h-100">
        <h1>Cadastro de Produtos</h1>

        <p>
            <a asp-action="Criar">Nova</a>
        </p>

        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.CodigoExterno)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Marca)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.NCM)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ProdutoClassificacaoId)
                    </th>
                    <th scope="col">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td scope="row">@i.Id</td>
                        <td scope="row">@i.CodigoExterno</td>
                        <td scope="row">@i.Nome</td>
                        <td scope="row">@i.Marca</td>
                        <td scope="row">@i.NCM</td>
                        <td scope="row">@i.ProdutoClassificacaoId</td>
                        <td>
                            <a asp-action="detalhar" asp-route-id="@i.Id" class="btn btn-primary btn-sm px-3">
                                <i class="fas fa-address-card"></i>
                            </a>
                            <a asp-action="alterar" asp-route-id="@i.Id" class="btn btn-info btn-sm px-3">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="javascript:apagarProduto('@i.Id')" class="btn btn-danger btn-sm px-3">
                                <i class="fas fa-times"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
